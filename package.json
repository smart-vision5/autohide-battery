{
  "name": "autohide-battery",
  "private": true,
  "scripts": {
    "test": "eslint *.js",
    "clean": "rimraf *.zip",
    "build": "yarn clean && gnome-extensions pack ./",
    "local": "yarn build && gnome-extensions install -f *.zip"
  },
  "repository": "ai/autohide-battery",
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "devDependencies": {
    "@logux/eslint-config": "^45.4.8",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "prettier": "^2.4.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "globals": {
      "imports": false
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^(init|enable|disable|buildPrefsWidget)$"
        }
      ]
    },
    "env": {
      "node": false
    }
  }
}
